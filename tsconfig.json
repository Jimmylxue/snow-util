{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/types/*":["./src/types/*"],
      "@/utils/*":["./src/utils/*"],
      "@/hooks/*":["./src/hooks/*"],
      "@/stores/*":["./src/stores/*"],
      "@/core/*":["./src/core/*"],
      "@/components/*":["./src/components/*"],
      "@/config/*":["./src/config/*"],
      "@/api/*":["./src/api/*"],
      "@/pages/*":["./src/pages/*"],
      "@/assets/*":["./src/assets/*"],
    }, 

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
